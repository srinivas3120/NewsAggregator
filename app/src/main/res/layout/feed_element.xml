<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_feed_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/light_gray"
    cardView:cardCornerRadius="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_feed_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:src="@drawable/profile_pic_default_profile_pic"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_feed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feed_title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_feed_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="2dp"
            android:text="@string/feed_desc"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="2dp">
            <TextView
                android:id="@+id/tv_feed_pubDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/feed_pubDate"/>
            <TextView
                android:id="@+id/tv_feed_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/feed_by"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>